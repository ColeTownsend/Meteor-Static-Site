{
  "source": "src",
  "destination": "_site",
  "metadata": {
    "title": "Portfolio of Cole Townsend",
    "description": "I'm just happy to be here. Pro bananagrammer, @thoughtbot designer, and curator of @newoldstokk. Williams College '15."
  },
  "plugins": {
    "metalsmith-drafts": {},
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-broken-link-checker": true,
    "metalsmith-autoprefixer": {},
    "metalsmith-collections": {
      "journal": {
        "sortBy": "date",
        "reverse": true
      },
      "work": {
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-sass": {
      "outputStyle": "compressed"
    },
    "metalsmith-react-templates": {
      "baseFile": "base.html",
      "isStatic": true,
      "directory": "templates"
    }
  }
}
